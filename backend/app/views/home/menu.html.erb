<!DOCTYPE html>
<html>
<head>
  <title>Industry Burger</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'menu', media: 'all' %>
</head>
<body>
  <div id="menu">
    <header>
      <%= image_tag("logo-grande.png", alt: "logo del negocio", class: "logo-grande") %>
    </header>

    <nav>

      <%= image_tag("logo.jpg", alt: "Logo pequeño", class: "logo2") %>
      
      <h1 class="texto">🍔 Nuestro Menú</h1>

      <div class="iconos">
        <%= image_tag('iconos/whatsapp.png', class: "icono") %>
        <%= image_tag('iconos/instagram.png', class: "icono") %>
      </div>
    </nav>

    <ul class="lista-menu">
      <li>
        <%= link_to image_tag("platillos/hamburguesa.jpg", alt: "Hamburguesa", class: "menu-img"), hamburguesa_path, class: 'menu-btn' %>
      </li>
      <li>
        <%= link_to image_tag("platillos/salchipapas.jpg", alt: "Salchipapas", class: "menu-img"), salchipapas_path, class: 'menu-btn' %>
      </li>
      <li>
        <%= link_to image_tag("platillos/perroscalientes.jpg", alt: "Perros Calientes", class: "menu-img"), perroscalientes_path, class: 'menu-btn' %>
      </li>
      <li>
        <%= link_to image_tag("platillos/desgranado.jpg", alt: "desgranados", class: "menu-img"), desgranados_path, class: 'menu-btn' %>
      </li>
      <li>
        <%= link_to image_tag("platillos/chuzo.jpg", alt: "chuzos", class: "menu-img"), chuzo_path, class: 'menu-btn' %>
      </li>
      <li>
        <%= link_to image_tag("platillos/salvajada.jpg", alt: "salvajada", class: "menu-img"), salvajada_path, class: 'menu-btn' %>
      </li>
    </ul>    
    
    <%= link_to "Volver a la Bienvenida", bienvenidos_path, class: "boton-amarillo" %>
 </div>     

</body>
</html>
